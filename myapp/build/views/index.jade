extends layout

block content
	header
		nav
			a(href="/")
				span Home
		div.container
			div.welcome.row
				div.col-xs-12
					p Good Morning 
						span.firstName= firstName

	main
		div.container
			div.description
				h2 About zMe:
				span= description
			
			h1 Employment History

			if positions
				each position in positions
					-var months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec']
					
					//-hr
					div.box
						div.row
							div.col-xs-4
								h3 Position
							div.col-xs-8
								span= position.title

						div.row
							div.col-xs-4
								h4 Employer
							div.col-xs-8
								span= position.employer
						div.row
							div.col-xs-3
								h4 Start Date
							div.col-xs-3
								- var startDate = new Date(position.startDate)
								//-span= position.startDate
								span= months[startDate.getMonth()]+ " " + startDate.getFullYear()
							div.col-xs-3
								h4 End Date
							div.col-xs-3
								- var endDate = new Date(position.endDate)
								span= months[endDate.getMonth()] + " " + endDate.getFullYear()
						div.row
							div.col-xs-4
								h4 Location
							div.col-xs-8
								span=position.location
						

						h4 Description
						span= position.description
	
	footer
		p Footer content goes here
	
